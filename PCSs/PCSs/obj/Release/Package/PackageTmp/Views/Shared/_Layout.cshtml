<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
     @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   
    @*<link href="~/Content/bootstrap4.1.3.css" rel="stylesheet" />*@
    <link href="~/Content/Css/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Css/logo.css" rel="stylesheet" />
   

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>


</head>
<body style="padding-top:0px">
    <div class="row col-md-12 col-sm-12 col-xs-12  header" style="margin:0;padding:0">
        <div class="col-md-3 col-sm-3 col-xs-3 " style=" background-color: #464646;padding: 0px;height:100%">

            <img src="~/Content/Image/logotrang.png" style="height:100%" />
        </div>
        <div class="col-md-9 col-sm-9 col-xs-9 " style=" background-color: #464646;padding: 0px;height:100%">

            <!-- Control Sidebar Toggle Button -->
            <div style="float: right;padding-top: 15px;padding-left: 15px;padding-right:1em">
                <a href="#" data-toggle="control-sidebar" onclick="openNav()">
                    <i class="fa fa-gears"></i>
                </a>
            </div>

            <div id="mySidenav" class="sidenav">
                <!-- <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a> -->
                <a href="#" data-toggle="modal" data-target="#changeProfile">
                    <b>
                        <i class="fa fa-user"></i> Change profile
                    </b>
                </a>

                <a href="#" data-toggle="modal" data-target="#changePass">

                    <b>
                        <i class="fa fa-edit"></i>Edit Password
                    </b>
                </a>

                <a href=@Url.Action("Login", "Home")>
                    <b>
                        <i class="glyphicon glyphicon-log-out"></i>Log out
                    </b>
                </a>


            </div>
            <!-- form edit pass -->
            <div class="modal fade" id="changePass" role="dialog">
                <div class="modal-dialog" style="position:unset">

                    <!-- Modal content-->
                    <div class="modal-content" style="width: 100%;padding: 2em">
                        <div class="modal-header" style="padding-left: 0px;">
                            <h4>Change PassWord</h4>
                            @* <h4 class="modal-title">Change PassWord</h4>*@
                            <button type="button" class="close" data-dismiss="modal">&times; </button>

                        </div>
                        <form>

                            <label>Password old</label><br />
                            <input type="password" id="passOld" name="passwordold" placeholder="Password old.." required>

                            <label>Password new</label><br />
                            <input type="password" id="passNew" name="passwordnew" placeholder="Password new.." required>

                            <label>Verification password</label><br />
                            <input type="password" id="" name="verificationpassword" placeholder="Verification password.."required>

                            <input type="submit" value="Submit">


                        </form>
                    </div>

                </div>
            </div>
            <!-- end form edit pass -->
            <!-- form edit information -->
            <div class="modal fade" id="changeProfile" role="dialog">
                <div class="modal-dialog" style="position:unset">

                    <!-- Modal content-->
                    <div class="modal-content" style="width: 100%;padding: 2em">
                        <div class="modal-header" style="padding-left: 0px;">
                            <h4 class="modal-title">Change Profile</h4>
                            <button type="button" class="close" data-dismiss="modal">&times; </button>

                        </div>
                        <form action="/action_page.php">
                            <label>First name</label><br />
                            <input type="text" id="fname" name="firstname" placeholder="Firstname.." required>

                            <label>Last name</label><br />
                            <input type="text" id="lname" name="lastname" placeholder="Lastname.."required>
                            <label> Email</label><br />
                            <input type="text" id="email1" name="email" placeholder="Email.."required>
                            <label>Phone number</label><br />
                            <input type="number" id="phone" name="phone" maxlength="11" pattern="[0][0-9]{7-9}" placeholder="Phone number.."required>
                            <label>Address</label><br />
                            <input type="text" id="address" name="address" placeholder="Address.."required>
                            <input type="submit" value="Submit">
                        </form>
                    </div>

                </div>
            </div>

            <!-- end form edit information -->
            <script>


                function openNav() {
                    document.getElementById("mySidenav").style.width = "250px";
                }

                function closeNav() {
                    document.getElementById("mySidenav").style.width = "0";
                }

                $(document.body).click(function (e) {
                    var a = document.getElementById("mySidenav").clientWidth;
                    if (a == 250) {

                        document.getElementById("mySidenav").style.width = "0";
                    }

                });
            </script>
            <!-- end sidebar -->
            <div style="float: right;padding-top: 13px;height: 100%;width:auto">
                <!-- The user image in the navbar-->
                <i class="fa fa-user" style="color:aquamarine" onclick="openNav()"> Wellcome Alexander Pierce</i>
                @*<img src="~/Content/Image/user2-160x160.jpg" class="user-image" alt="User Image"/>*@
                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                <span></span>

            </div>


        </div>
    </div>
    <!-- end form edit information -->
    <div class="col-md-12  col-sm-12 col-xs-12 clearPanddingMargin" style="min-height:885px;display:flex;clear:both">
        @* class=""container body-content*@
        @RenderBody()

    </div>
    <!--footer-->
   
        <div class="row col-md-12 col-sm-12 col-xs-12 footer" style="margin:0px">
            <div class="col-md-6 col-sm-12 col-xs-12">
                <i class="fa fa-map-marker"></i>
                No 12, 641 Lane, Pham Van Dong Street, Ha Noi, Viet Nam
            </div>

            <div class="col-md-2 col-sm-12 col-xs-12">
                <img src="~/Content/Image/e-mail.png" style="filter:white;height:1em"> contact@swilife.com
            </div>
            <div class="col-md-2 col-sm-12 col-xs-12">
                <i class="fa fa-phone"></i>
                02439942285
            </div>
            <div class="col-md-2 col-sm-12 col-xs-12">
                <img src="~/Content/Image/logotrang.png" class="logo">
            </div>

        </div>
   

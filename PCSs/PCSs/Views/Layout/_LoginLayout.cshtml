@model PCSs.Models.UserLoginInfo

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>@ViewBag.Title</title>

    <link href="~/Content/Css/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Ionicons/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Content/Css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/Css/Login.css" rel="stylesheet" />
    <link href="~/Content/iCheck/square/blue.css" rel="stylesheet" />


    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

</head>
<body class="hold-transition login-page" id="login-page">
    @RenderBody()
    <div class="login-logo" id="login-logo">
        <a href="#"><img src="~/Content/Image/LogoSample_ByTailorBrands.jpg" alt=""></a>
    </div>
    <h1 class="text-center">PROFESSIONAL CHECKING SYSTEM</h1>
    <div class="login-box" id="login-box">
        <!-- /.login-logo -->
        <div class="login-box-body" id="login-box-body">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(s=> s.ReturnURL)
                <p class="login-box-msg" id="login-box-msg">SIGN IN</p>
                <div>
                    @if (TempData["ErrorMSG"] != null)
                    {
                        <label style="color:darkred;"> @TempData["ErrorMSG"] </label>
                        <br /><br />
                    }
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(s => s.UserName, new { @placeholder = "UserName", @class = "form-control" })
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.PasswordFor(s => s.Password, new { @placeholder = "Password", @class = "form-control"})
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="checkbox icheck" id="checkbox">
                                <label>
                                    @Html.CheckBoxFor(s => s.IsRemember) Remember ME
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-xs-6">
                            <div class="forgot-password text-right">
                                <a href="@Url.Action("ForgetPassword", "General")">I forgot my password</a><br>
                            </div>
                        </div>
                        <!-- /.col -->
                    </div>
                    <div class="Submit">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Login</button>
                    </div>
                </div>
            <!-- /.social-auth-links -->
            }

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <footer>
        <div class="social-icon">
            <ul class="icon">
                <li><a href="https://swilife.com">About Us</a></li>
                <li><a href="https://swilife.com/">Contact Us</a></li>
                <li><a href="https://www.facebook.com/SwiLife-JSC-144283573063424/"><i class="fa fa-facebook-official" aria-hidden="true"></i></a></li>
                <li><a href="https://www.linkedin.com/in/swilife/"><i class="fa fa-linkedin-square" aria-hidden="true"></i></a></li>
            </ul>
        </div>
    </footer>
    <!-- jQuery 3 -->
    <script src="~/Scripts/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Content/iCheck/icheck.min.js"></script>
    <script>
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' // optional
    });
  });
    </script>
</body>
</html>


@{
    Layout = null;
    ViewBag.Title = "Ten cua Recruiter";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/Content/Ionicons/css/ionicons.min.css" rel="stylesheet" />
    <!-- DataTables -->
    <link href="~/Content/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Content/Css/AdminLTE.min.css" rel="stylesheet" />
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link href="~/Content/Css/skins/_all-skins.min.css" rel="stylesheet" />

    <link href="~/Content/Css/ManageAccount.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini">

    <div class="slide-bar col-md-2 col-sm-2 col-xs-12">
        <div class="list">
            <div class="candidate-manager item"><a href="#candidate-manager" data-toggle="pill">Candidate Manager</a></div>
            <div class="Report-manager item"><a href="#report-manager" data-toggle="pill">Report Manager</a></div>
        </div>
    </div>
    <div class="col-md-10 col-sm-10 col-xs-12">
    <div class="tab-content">
        <div id="candidate-manager" class="tab-pane fade in active">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">           
            <!-- Main content -->
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Candidate Information</h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <table id="candidates" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone Number</th>
                                            <th>Status</th>
                                            <th>Start Date</th>
                                            <th>Completed Date</th>
                                            <th>Edit</th>
                                            <th>Detail</th>
                                        </tr>
                                    </thead>
                                    <tbody>
    @{
        var Name = "Ten";
        var Email = "Email@gmail.com";
        var PhoneNumber = "0123456";
        var Status = "Ready";
        var StartDate = "2018/09/01";
        var CompletedDate = DateTime.UtcNow;
    }
                                        @for (int i = 0; i < 150; i++)
                                        {
                                        <tr>
                                            <td>@(Name + i)</td>
                                            <td>@(Email + i)</td>
                                            <td>@(PhoneNumber + i)</td>
                                            <td>@Status</td>
                                            <td>@StartDate</td>
                                            <td>@CompletedDate</td>
                                            <td class="edit"><a href="#" class="fas fa-pencil-alt"></a></td>
                                            <td class="detail"><a href="#" class="far fa-calendar-alt"></a></td>

                                        </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone Number</th>
                                            <th>Status</th>
                                            <th>Start Date</th>
                                            <th>Completed Date</th>
                                            <th>Detail</th>
                                            <th>Edit</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            <!-- /.content -->
        </div>
       
        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>
            </div>
        <div id="report-manager" class="tab-pane fade">
            <h1>Report Manager</h1>
        </div>
        </div>
        </div>
    <!-- ./wrapper -->
    <!-- jQuery 3 -->
    <script src="~/Scripts/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- DataTables -->
    <script src="~/Content/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="~/Content/Js/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/Content/Js/fastclick/lib/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/Js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Content/Js/demo.js"></script>
    <!-- page script -->
    <script>
  $(function () {
      $('#candidates').DataTable()
  })
    </script>
</body>
</html>

@model PCSs.Models.CandidateInfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>

    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link href="~/Content/Css/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Ionicons/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Content/Css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/Css/Candidate.css" rel="stylesheet" />
    <link href="~/Content/Css/skins/_all-skins.min.css" rel="stylesheet" />
    <link href="~/Content/iCheck/square/blue.css" rel="stylesheet" />
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

</head>
<body class="body-candidate">
    <h1 class="text-center">
        <!-- Logo -->
        <img src="~/Content/Image/LogoSample_ByTailorBrands.jpg" alt="Professional Checking System" />
    </h1>
    <!-- Main content -->
    <div class="row">
        <!-- general form elements -->
        <div class="box">
            <!-- form start -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.CandidateGeneralInfo.CandidateId)

                <div class="tab-content">
                    <!-- general information tab -->
                    <div id="candidate" class="tab-pane fade in active">
                        <div class="col-md-12">
                            <!-- /.box-header -->
                            <!-- form start -->
                            <form role="form">
                                <div class="box-body">
                                    <div class="with-border text-center">
                                        <h3 class="box-title">Basic Information</h3>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                @Html.Label("Profile picture")
                                                @Html.TextBoxFor(model => model.CandidateGeneralInfo.PictureLink, new
                                           {
                                               type = "file",
                                               id = "profile_pic",
                                               name = "profile_pic",
                                               accept = ".jpg, .jpeg, .png"
                                           })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-12">
                                            @Html.Label("Name:")
                                            <div class="row">
                                                <div class="col-md-3">
                                                    @Html.EditorFor(s => s.CandidateGeneralInfo.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "First Name" } })
                                                </div>
                                                <div class="col-md-3">
                                                    @Html.EditorFor(s => s.CandidateGeneralInfo.MiddleName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Middle Name" } })
                                                </div>
                                                <div class="col-md-3">
                                                    @Html.EditorFor(s => s.CandidateGeneralInfo.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Name" } })
                                                </div>
                                                <div class="form-group col-md-3">
                                                    <label for="">Gender</label>
                                                    <div class="row gender">
                                                        <div class="col-md-6">
                                                            @Html.RadioButtonFor(model => model.CandidateGeneralInfo.Gender, "Male", new { id = "male" })
                                                            @Html.Label("male", "Male")
                                                        </div>
                                                        <div class="col-md-6">
                                                            @Html.RadioButtonFor(model => model.CandidateGeneralInfo.Gender, "Female", new { id = "female" })
                                                            @Html.Label("female", "Female")
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-3">
                                            @Html.LabelFor(model => model.CandidateGeneralInfo.Email)
                                            @Html.EditorFor(model => model.CandidateGeneralInfo.Email, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CandidateGeneralInfo.Email, "", new { @class = "text-danger" })

                                        </div>
                                        <div class="form-group col-md-3">
                                            @Html.LabelFor(model => model.CandidateGeneralInfo.PhoneNumber)
                                            @Html.EditorFor(model => model.CandidateGeneralInfo.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CandidateGeneralInfo.PhoneNumber, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-3">
                                            @Html.LabelFor(model => model.CandidateGeneralInfo.DOB)
                                            @Html.EditorFor(model => model.CandidateGeneralInfo.DOB, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CandidateGeneralInfo.DOB, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-3">
                                            @Html.LabelFor(model => model.CandidateGeneralInfo.IssuranceNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                                            @Html.EditorFor(model => model.CandidateGeneralInfo.IssuranceNumber, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CandidateGeneralInfo.IssuranceNumber, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-3" id="idnumber">
                                            @Html.LabelFor(model => model.CandidateGeneralInfo.IDNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                                            @Html.EditorFor(model => model.CandidateGeneralInfo.IDNumber, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CandidateGeneralInfo.IDNumber, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-3" id="iddate">
                                            @Html.LabelFor(model => model.CandidateGeneralInfo.IDDate, htmlAttributes: new { @class = "control-label col-md-2" })
                                            @Html.EditorFor(model => model.CandidateGeneralInfo.IDDate, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CandidateGeneralInfo.IDDate, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-3" id="idsupply">
                                            @Html.LabelFor(model => model.CandidateGeneralInfo.IDSupply, htmlAttributes: new { @class = "control-label col-md-2" })
                                            @Html.EditorFor(model => model.CandidateGeneralInfo.IDSupply, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CandidateGeneralInfo.IDSupply, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            @Html.LabelFor(model => model.CandidateGeneralInfo.JobTitle)
                                            @Html.EditorFor(model => model.CandidateGeneralInfo.JobTitle, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CandidateGeneralInfo.JobTitle, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-6">
                                            @Html.LabelFor(model => model.CandidateGeneralInfo.JobLevel)
                                            @Html.DropDownListFor(model => model.CandidateGeneralInfo.JobLevel, new SelectList(ViewBag.LevelType, "Value", "Text"), new { id = "Level Type", @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-12">
                                            @Html.LabelFor(model => model.CandidateGeneralInfo.Address)
                                            @Html.TextAreaFor(model => model.CandidateGeneralInfo.Address, new { @class = "form-control col-md-12", @rows = 5 })
                                            @Html.ValidationMessageFor(model => model.CandidateGeneralInfo.Address, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                                <div class="box-footer text-right col-md-12">
                                    <a href="#company" data-toggle="pill"><button type="submit" class="btn btn-primary">Next</button></a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Company information tab-->
                    <div id="company" class="tab-pane fade">
                        <!-- form start -->

                        <div class="box-body" id="company-information">
                            @if (Model.ChecksInfo.Keys.Count > 0)
                            {
                                var indexCom = 0;
                                foreach (var companyinfo in Model.ChecksInfo.Keys)
                                {
                                    @Html.HiddenFor(model => companyinfo.CompanyInfoId)
                                    <form id="@("company-base-info" + indexCom)" role="form" method="POST">
                                        <div class="with-border text-center">
                                            <h3 class="box-title">Company Information</h3>
                                        </div>
                                        <div class="cold-md-3 cancel text-right" id="button-remove-company" hidden="hidden">
                                            <button class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i></button>
                                        </div>
                                        <div class="box-body">
                                            <div class="@("company-general-information" + indexCom)">
                                                <div class="row">
                                                    <div class="form-group col-md-6">
                                                        @Html.LabelFor(model => companyinfo.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                                        @Html.EditorFor(model => companyinfo.Name, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => companyinfo.Name, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        @Html.LabelFor(model => companyinfo.Country, htmlAttributes: new { @class = "control-label col-md-2" })
                                                        @Html.EditorFor(model => companyinfo.Country, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => companyinfo.Country, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-md-6">
                                                        @Html.LabelFor(model => companyinfo.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                                                        @Html.EditorFor(model => companyinfo.Address, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => companyinfo.Address, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        @Html.LabelFor(model => companyinfo.Website, htmlAttributes: new { @class = "control-label col-md-2" })
                                                        @Html.EditorFor(model => companyinfo.Website, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => companyinfo.Website, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-md-6">
                                                        @Html.LabelFor(model => companyinfo.Jobtitle, htmlAttributes: new { @class = "control-label col-md-2" })
                                                        @Html.EditorFor(model => companyinfo.Jobtitle, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => companyinfo.Jobtitle, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        @Html.LabelFor(model => companyinfo.StartDate, htmlAttributes: new { @class = "control-label col-md-2" })
                                                        @Html.TextBoxFor(model => companyinfo.StartDate, "{0:dd-MM-yyyy}", new { @class = "form-control datepicker", @id = "start-date" })
                                                        @Html.ValidationMessageFor(model => companyinfo.StartDate, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        @Html.LabelFor(model => companyinfo.StopDate, htmlAttributes: new { @class = "control-label col-md-2" })
                                                        @Html.TextBoxFor(model => companyinfo.StopDate, "{0:dd-MM-yyyy}", new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => companyinfo.StopDate, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <!--Reference information-->
                                            @{var referenceInfo1 = Model.ChecksInfo[companyinfo].Reference1;
                                                var referenceInfo2 = Model.ChecksInfo[companyinfo].Reference2;
                                            }
                                            <div id="reference-information0">
                                                    <div class="box-body">
                                                        <div class="row">
                                                            <div class="col-md-9">
                                                                <h3>Reference Information</h3>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="form-group col-md-6">
                                                                @Html.LabelFor(model => referenceInfo1.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
                                                                @Html.EditorFor(model => referenceInfo1.FullName, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => referenceInfo1.FullName, "", new { @class = "text-danger" })
                                                            </div>
                                                            <div class="form-group col-md-3">
                                                                @Html.LabelFor(model => referenceInfo1.JobTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                                                                @Html.EditorFor(model => referenceInfo1.JobTitle, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => referenceInfo1.JobTitle, "", new { @class = "text-danger" })
                                                            </div>
                                                            <div class="form-group col-md-3">
                                                                @Html.LabelFor(model => referenceInfo1.RelationShip, htmlAttributes: new { @class = "control-label col-md-2" })
                                                                @Html.DropDownListFor(model => referenceInfo1.RelationShip,
                                                             new[] { new SelectListItem
                                                           {
                                                               Text = "Superior",
                                                               Value = "Superior",
                                                           },new SelectListItem
                                                           {
                                                               Text = "Peer",
                                                               Value = "Peer",
                                                           },new SelectListItem
                                                           {
                                                               Text = "Subordinate",
                                                               Value = "Subordinate",
                                                           },new SelectListItem
                                                           {
                                                               Text = "Other",
                                                               Value = "Other",
                                                           }
                                                             }, new { id = "Level Type", @class = "form-control" })
                                                            </div>

                                                        </div>
                                                        <div class="row">
                                                            <div class="form-group col-md-6">
                                                                @Html.LabelFor(model => referenceInfo1.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                                                                @Html.EditorFor(model => referenceInfo1.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => referenceInfo1.Email, "", new { @class = "text-danger" })
                                                            </div>
                                                            <div class="form-group col-md-6">
                                                                @Html.LabelFor(model => referenceInfo1.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                                                                @Html.EditorFor(model => referenceInfo1.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => referenceInfo1.PhoneNumber, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>

                                                    </div>
                                            </div>

                                            <div id="reference-information1" hidden>
                                                <div class="box-body">
                                                    <div class="cold-md-3 cancel text-right" id="button-remove-reference1" onclick="removeReference(@indexCom); return false;">
                                                        <button class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i></button>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-9">
                                                            <h3>Reference Information number 2</h3>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-md-6">
                                                            @Html.LabelFor(model => referenceInfo2.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
                                                            @Html.EditorFor(model => referenceInfo2.FullName, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => referenceInfo2.FullName, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="form-group col-md-3">
                                                            @Html.LabelFor(model => referenceInfo2.JobTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                                                            @Html.EditorFor(model => referenceInfo2.JobTitle, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => referenceInfo2.JobTitle, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="form-group col-md-3">
                                                            @Html.LabelFor(model => referenceInfo2.RelationShip, htmlAttributes: new { @class = "control-label col-md-2" })
                                                            @Html.DropDownListFor(model => referenceInfo2.RelationShip,
                                                             new[] { new SelectListItem
                                                           {
                                                               Text = "Superior",
                                                               Value = "Superior",
                                                           },new SelectListItem
                                                           {
                                                               Text = "Peer",
                                                               Value = "Peer",
                                                           },new SelectListItem
                                                           {
                                                               Text = "Subordinate",
                                                               Value = "Subordinate",
                                                           },new SelectListItem
                                                           {
                                                               Text = "Other",
                                                               Value = "Other",
                                                           }
                                                             }, new { id = "Level Type", @class = "form-control" })
                                                        </div>

                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-md-6">
                                                            @Html.LabelFor(model => referenceInfo2.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                                                            @Html.EditorFor(model => referenceInfo2.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => referenceInfo2.Email, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            @Html.LabelFor(model => referenceInfo2.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                                                            @Html.EditorFor(model => referenceInfo2.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => referenceInfo2.PhoneNumber, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--Add reference button-->
                                            <div class="box-title clickadd">
                                                <button type="button" class="btn btn-primary" id="@("button-add-reference" + indexCom)" onclick="addReference(@indexCom)">+ Add reference</button>
                                            </div>
                                        </div>
                                    </form>
                                    indexCom++;
                                }
                            } else
                            {
                                // create new company form
                            }
                        </div>
                        <div class="box-footer text-right" id="add-company-button">
                            <button type="button" class="btn btn-primary" id="button-add-company" onclick="addCompany()"><i class="fa fa-plus" aria-hidden="true"></i></button>
                        </div>
                        <div class="checkbox icheck" id="checkbox">
                            <label>
                                @Html.CheckBoxFor(s => s.IsAccepted) I guarantee the above information is true and take full responsibility before the law. The company reserves the right to verify the above information.
                            </label>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="box-footer">
                                    <a href="#candidate" data-toggle="pill"><button type="submit" class="btn btn-primary">Back</button></a>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- jQuery 3 -->
    <script src="~/Scripts/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Slimscroll -->
    <script src="~/Content/Js/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/Content/Js/fastclick/lib/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/Js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Content/Js/demo.js"></script>
    <script src="~/Content/iCheck/icheck.min.js"></script>

    <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script> -->
    <script type="text/javascript" src="~/Content/Js/update-info-candidate.js"></script>
    <script type="text/javascript">
        updateCompanyCount(@Html.Raw(Json.Encode(Model.ChecksInfo.Count)));
    </script>

</body>

</html>

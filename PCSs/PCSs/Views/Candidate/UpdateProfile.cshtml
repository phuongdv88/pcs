@model PCSs.Models.CandidateInfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>

    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link href="~/Content/Css/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Ionicons/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Content/Css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/Css/Candidate.css" rel="stylesheet" />
    <link href="~/Content/Css/skins/_all-skins.min.css" rel="stylesheet" />
    <link href="~/Content/iCheck/square/blue.css" rel="stylesheet" />
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

</head>
<body class="body-candidate">
    <header class="text-center">
        <!-- Logo -->
        <img src="~/Content/Image/LogoSample_ByTailorBrands.jpg" alt="Professional Checking System" />
    </header>
    <!-- Main content -->
    <div class="row">
        <!-- general form elements -->
        <div class="box">
            <!-- form start -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.CandidateGeneralInfo.CandidateId)

                <div class="tab-content">
                    <!-- general information tab -->
                    <div id="candidate" class="tab-pane fade in active">
                        <div class="col-md-12">
                            <!-- /.box-header -->
                            <!-- form start -->
                            <form role="form">
                                <div class="box-body">
                                    <div class="with-border text-center">
                                        <h3 class="box-title">Basic Information</h3>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                @Html.Label("Profile picture")
                                                @Html.TextBoxFor(model => model.CandidateGeneralInfo.PictureLink, new
                                           {
                                               type = "file",
                                               id = "profile_pic",
                                               name = "profile_pic",
                                               accept = ".jpg, .jpeg, .png"
                                           })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-12">
                                            @Html.Label("Name:")
                                            <div class="row">
                                                <div class="col-md-3">
                                                    @Html.EditorFor(model => model.CandidateGeneralInfo.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "First Name" } })
                                                </div>
                                                <div class="col-md-3">
                                                    <input type="text" class="form-control" placeholder="Middle Name" required="">
                                                </div>
                                                <div class="col-md-3">
                                                    <input type="text" class="form-control" placeholder="Last name" required="">
                                                </div>
                                                <div class="form-group col-md-3">
                                                    <label for="">Gender</label>
                                                    <div class="row gender">
                                                        <div class="col-md-6">
                                                            <input type="radio" name="gender" value="male" checked> Male<br>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <input type="radio" name="gender" value="female"> Female<br>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <label for="">Apply job title</label>
                                            <input type="text" class="form-control" placeholder="quản lí, giám đốc" required="">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Apply job level</label>
                                            <select class="form-control">
                                                <option>Fresher</option>
                                                <option>Junior</option>
                                                <option>Senior</option>
                                                <option>Expert manager</option>
                                                <option>Higher</option>
                                            </select>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-3">
                                            <label for="">Email address</label>
                                            <input type="email" class="form-control" placeholder="Enter email" required="">
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label for="">Phone number</label>
                                            <input type="text" class="form-control" placeholder="0123456789" maxlength="11" minlength="10" required="">
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label for="">Birthday</label>
                                            <input type="date" class="form-control" placeholder="01/01/1999" required="">
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label for="">Social Isurance Number</label>
                                            <input type="text" class="form-control" placeholder="491563615684">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="form-group col-md-3">
                                            <label>Document Type</label>
                                            <select class="form-control">
                                                <option id="checkidnumber">IDNumber</option>
                                                <option id="checkpasstportnumber">PassportNumber</option>
                                            </select>
                                        </div>
                                        <div class="form-group col-md-3" id="idnumber">
                                            <label for="">IDNumber</label>
                                            <input type="text" class="form-control" placeholder="Số CMND" maxlength="13" minlength="9">
                                        </div>
                                        <div class="form-group col-md-3" id="iddate">
                                            <label for="">IDDate</label>
                                            <input type="date" class="form-control" placeholder="01/01/2018" required="">
                                        </div>
                                        <div class="form-group col-md-3" id="idsupply">
                                            <label for="">IDSupply</label>
                                            <input type="text" class="form-control" required="">
                                        </div>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                                <div class="box-footer text-right col-md-12">
                                    <a href="#company" data-toggle="pill"><button type="submit" class="btn btn-primary">Next</button></a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Company information tab-->
                    <div id="company" class="tab-pane fade">
                        <!-- form start -->
                        <div class="box-body" id="company-information">
                            <form id="company-base-info" role="form" method="POST">
                                <div class="with-border text-center">
                                    <h3 class="box-title">Company Information</h3>
                                </div>
                                <div class="cold-md-3 cancel text-right" id="button-remove-company" hidden="hidden">
                                    <button class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i></button>
                                </div>
                                <div class="box-body">
                                    <div class="company-general-information">
                                        <div class="row">
                                            <div class="form-group col-md-6">
                                                <label for="">Company Name</label>
                                                <input type="text" class="form-control" placeholder="Swilife" required="">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="">Country</label>
                                                <input type="email" class="form-control" placeholder="Viet Nam" required="">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-6">
                                                <label for="">Address</label>
                                                <input type="email" class="form-control" placeholder="Cau giay - Ha noi" required="">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="">Website</label>
                                                <input type="text" class="form-control" placeholder="Swilife.com" required="">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-6">
                                                <label for="">Job title</label>
                                                <input type="text" class="form-control" placeholder="quản lí, giám đốc" required="">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label>Job level</label>
                                                <select class="form-control">
                                                    <option>Fresher</option>
                                                    <option>Junior</option>
                                                    <option>Senior</option>
                                                    <option>Expert manager</option>
                                                    <option>Higher</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-6">
                                                <label for="">StartDate</label>
                                                <input type="date" class="form-control" name="StartDate" placeholder="01/01/2014">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="">StopDate</label>
                                                <input type="date" class="form-control" name="StopDate" placeholder="01/01/2018">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-6">
                                                <label for="">Description</label>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <textarea name="note" id="" cols="103" rows="3"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-6">
                                                <label for="">Document</label>
                                                <input type="file" name="images">
                                            </div>
                                        </div>
                                    </div>
                                    <!--Reference information-->
                                    <div id="reference-information">
                                        <div class="box-body">
                                            <div class="row">
                                                <div class="col-md-9">
                                                    <h3>Reference Information</h3>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group col-md-6">
                                                    <label for="">Full Name</label>
                                                    <div class="row">
                                                        <div class="col-xs-12">
                                                            <input type="text" class="form-control" placeholder="" required="">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="">Gender</label>
                                                    <div class="row gender">
                                                        <div class="col-md-4">
                                                            <input type="radio" name="gender" value="male" checked> Male<br>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <input type="radio" name="gender" value="female"> Female<br>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group col-md-6">
                                                    <label for="">Email</label>
                                                    <input type="email" class="form-control" placeholder="email" required="">
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="">Phonenumber</label>
                                                    <input type="text" class="form-control" placeholder="phone number" required="">
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group col-md-6">
                                                    <label for="">Job title</label>
                                                    <input type="text" class="form-control" placeholder="supervisor, director" required="">
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label>Relationship</label>
                                                    <select class="form-control">
                                                        <option>Superior</option>
                                                        <option>Peer</option>
                                                        <option>Subordinate</option>
                                                        <option>Other</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="reference-information1" hidden>
                                        <div class="box-body">
                                            <div class="row">
                                                <div class="col-md-9">
                                                    <h3>Reference Information number 2</h3>
                                                </div>
                                                <div class="cold-md-3 cancel text-right" id="button-remove-reference" onclick="removeReference(0)">
                                                    <button class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i></button>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group col-md-6">
                                                    <label for="">Full Name</label>
                                                    <div class="row">
                                                        <div class="col-xs-12">
                                                            <input type="text" class="form-control" placeholder="" required="">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="">Gender</label>
                                                    <div class="row gender">
                                                        <div class="col-md-4">
                                                            <input type="radio" name="gender" value="male" checked> Male<br>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <input type="radio" name="gender" value="female"> Female<br>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group col-md-6">
                                                    <label for="">Email</label>
                                                    <input type="email" class="form-control" placeholder="email" required="">
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="">Phonenumber</label>
                                                    <input type="text" class="form-control" placeholder="phone number" required="">
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group col-md-6">
                                                    <label for="">Job title</label>
                                                    <input type="text" class="form-control" placeholder="supervisor, director" required="">
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label>Relationship</label>
                                                    <select class="form-control">
                                                        <option>Superior</option>
                                                        <option>Peer</option>
                                                        <option>Subordinate</option>
                                                        <option>Other</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--Add reference button-->
                                    <div class="box-title clickadd">
                                        <button type="button" class="btn btn-primary" id="button-add-reference" onclick="addReference(0)">+ Add reference</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="box-footer text-right" id="add-company-button">
                            <button type="button" class="btn btn-primary" id="button-add-company" onclick="addCompany()"><i class="fa fa-plus" aria-hidden="true"></i></button>
                        </div>
                        <div class="checkbox icheck" id="checkbox">
                            <label>
                                @Html.CheckBoxFor(s => s.IsAccepted) I guarantee the above information is true and take full responsibility before the law. The company reserves the right to verify the above information.
                            </label>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="box-footer">
                                    <a href="#candidate" data-toggle="pill"><button type="submit" class="btn btn-primary">Back</button></a>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- jQuery 3 -->
    <script src="~/Scripts/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Slimscroll -->
    <script src="~/Content/Js/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/Content/Js/fastclick/lib/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/Js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Content/Js/demo.js"></script>
    <script src="~/Content/iCheck/icheck.min.js"></script>

    <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script> -->
    <script type="text/javascript" src="~/Content/Js/update-info-candidate.js"></script>

</body>

</html>
